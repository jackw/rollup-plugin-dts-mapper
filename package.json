{
  "name": "rollup-plugin-dts-mapper",
  "version": "0.0.1",
  "description": "A rollup plugin to create .d.ts files that point back to their src for development.",
  "repository": "https://github.com/jackw/rollup-plugin-dts-mapper",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    "types": "./types/index.d.ts",
    "import": "./dist/es/index.js",
    "default": "./dist/cjs/index.js"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "dist/**/*",
    "types/**/*"
  ],
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint ./src",
    "test": "vitest --run",
    "release": "auto shipit"
  },
  "keywords": [
    "rollup-plugin",
    "typescript",
    "definitions",
    "development"
  ],
  "author": "Jack Westbrook",
  "license": "MIT",
  "devDependencies": {
    "@auto-it/all-contributors": "^11.1.6",
    "@auto-it/first-time-contributor": "^11.1.6",
    "@auto-it/omit-commits": "^11.1.6",
    "@eslint/js": "^9.6.0",
    "auto": "^11.1.6",
    "eslint": "^9.6.0",
    "globals": "^15.8.0",
    "rollup": "^2.0.0",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "rollup": "^1.20.0 || ^2.0.0 || ^3.0.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "rollup": {
      "optional": true
    }
  },
  "auto": {
    "plugins": [
      "npm",
      "all-contributors",
      "first-time-contributor",
      "released",
      [
        "omit-commits",
        {
          "labels": [
            "no-changelog"
          ]
        }
      ]
    ],
    "onlyPublishWithReleaseLabel": true,
    "labels": [
      {
        "name": "no-changelog",
        "changelogTitle": "none",
        "description": "Don't include this PR in releases",
        "releaseType": "skip"
      }
    ]
  }
}
